<Window x:Class="WpfButtons.m"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfButtons"
        mc:Ignorable="d"
        Title="m" Height="450" Width="800">
    <DockPanel>

        <Button VerticalAlignment ="Top" DockPanel.Dock="Top" Height="50">TOP</Button>
        <Button VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Height="50">BOTTOM</Button>
        <StackPanel Orientation="Horizontal">
            <Button Width="50">LEFT</Button>
            <Button Width="50">LEFT</Button>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Width="50" Margin="591,0,0,0">RIGHT</Button>
                <Button Width="50">RIGHT</Button>
            </StackPanel>
        </StackPanel>

    </DockPanel>
</Window>
