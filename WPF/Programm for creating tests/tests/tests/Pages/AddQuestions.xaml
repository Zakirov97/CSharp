<Page x:Class="tests.Pages.AddQuestions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tests.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddQuestions">

    <StackPanel Orientation="Vertical">
        <Label Height="24">Добавление вопроса</Label>
        <ComboBox x:Name="cbSections" DisplayMemberPath="Name"></ComboBox>
        <WrapPanel>
            <TextBox x:Name="tbxQuestion" Width="150"></TextBox>
            <Button x:Name="btnAnswer" Click="btnAnswer_Click">Добавить ответ</Button>
        </WrapPanel>
        
        <WrapPanel Orientation="Vertical" x:Name="wpListAnswer">
            
        </WrapPanel>
        <Button x:Name="btnSaveQ" Click="btnSaveQ_Click">Сохранить</Button>
    </StackPanel>
</Page>
